/**
 * Shared core logic for follow-ups.
 * - Headers at ROW 4, data from ROW 5 down.
 * - Stamps "Last Follow-Up Sent" in Column T (T5:T) on the SAME ROW as the serial in Column A.
 * - If force=true, send even if stamped today (overwrites today‚Äôs stamp). If false, skip if stamped today.
 * Returns { emailsSent }.
 */
function processFollowUpsBySerial_(force) {
  const ss    = SpreadsheetApp.getActiveSpreadsheet();
  const sheet = ss.getSheetByName(INVOICE_DB_NAME); // 'EntryDatabase'
  if (!sheet) throw new Error(`Sheet '${INVOICE_DB_NAME}' not found.`);

  const allValues = sheet.getRange(1, 1, sheet.getLastRow(), sheet.getLastColumn()).getDisplayValues();
  if (allValues.length < 5) return { emailsSent: 0 };

  const HEADER_ROW = 4;
  const DATA_START = 5;
  const headers = allValues[HEADER_ROW - 1];
  const data    = allValues.slice(DATA_START - 1);

  const nameIndex     = headers.indexOf("Full Name");
  const businessIndex = headers.indexOf("Business");
  const campaignIndex = headers.indexOf("Campaign");
  const amountIndex   = headers.indexOf("Given Amount");
  const dueDateIndex  = headers.indexOf("Downpayment Due Date");
  const emailIndex    = headers.indexOf("Email");
  const serialIndex   = headers.indexOf("Serial No.");
  const percentIndex  = headers.indexOf("Percentage");

  if ([nameIndex, businessIndex, campaignIndex, amountIndex, dueDateIndex, emailIndex, serialIndex, percentIndex].includes(-1)) {
    throw new Error("A required column is missing in 'EntryDatabase'. Expected headers: Full Name, Business, Campaign, Given Amount, Downpayment Due Date, Email, Serial No., Percentage.");
  }

  // Ensure Column T header exists
  const LAST_SENT_COL_1B = 20; // T
  const LAST_SENT_COL_0B = LAST_SENT_COL_1B - 1;
  if (headers[LAST_SENT_COL_0B] !== "Last Follow-Up Sent") {
    sheet.getRange(HEADER_ROW, LAST_SENT_COL_1B).setValue("Last Follow-Up Sent");
  }

  // Read and format T5:T (date + time)
  const tRange  = sheet.getRange(DATA_START, LAST_SENT_COL_1B, data.length, 1);
  tRange.setNumberFormat("mmm d, yyyy h:mm am/pm");
  const tValues = tRange.getValues(); // [[dateOrEmpty], ...]

  const tz     = Session.getScriptTimeZone();
  const today  = new Date(); today.setHours(0, 0, 0, 0);

  let emailsSent = 0;

  data.forEach((row, i) => {
  // Normalize & validate email
  const EMAIL_RE = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
  let emailCell = row[emailIndex] || "";

  // If multiple addresses, take the first
  if (typeof emailCell === "string") {
    emailCell = emailCell.split(/[;,]/)[0].trim();
  } else {
    emailCell = String(emailCell || "").trim();
  }

  // If the ‚ÄúEmail‚Äù field isn‚Äôt valid, try to guess any email in the row, else skip
  let email = EMAIL_RE.test(emailCell) ? emailCell : "";
  if (!email) {
    const guess = row.find(v => typeof v === "string" && /@/.test(v));
    if (guess && EMAIL_RE.test(guess.trim())) email = guess.trim();
  }
  if (!email) { Logger.log(`Skipping row ${DATA_START + i}: invalid email "${row[emailIndex]}"`); return; }


    // Skip if already sent today (unless force)
    const lastSent = tValues[i][0];
    if (!force && lastSent instanceof Date && isSameDay_(lastSent, today)) return;

    // Due date (only today/future)
    const rawDue  = row[dueDateIndex];
    const dueDate = (rawDue instanceof Date) ? new Date(rawDue) : new Date(rawDue);
    const dueOnly = dateOnly_(dueDate);
    if (!dueOnly || dueOnly < today) return;

    // Percentage (accepts 0.3, 30, "30%")
    let pctRaw = row[percentIndex];
    let pct = (typeof pctRaw === "number") ? pctRaw : parseFloat(String(pctRaw || "").replace("%","").trim());
    if (isNaN(pct)) return;
    if (pct > 1) pct = pct / 100;
    if (pct >= 0.30) return; // only follow up if < 30%

    // Amount
    let amtRaw = row[amountIndex];
    let amountNum = (typeof amtRaw === "number") ? amtRaw : (parseFloat(String(amtRaw).replace(/[^\d.-]/g,"")) || 0);

    const campaign = row[campaignIndex];
    const serialNo = row[serialIndex];

    const daysUntilDue = Math.ceil((dueOnly.getTime() - today.getTime()) / (1000 * 60 * 60 * 24));
    const dueStr       = Utilities.formatDate(dueOnly, tz, "MMMM d, yyyy");

    // Greeting fallback: Full Name ‚Üí Business ‚Üí first name from email
    const displayName = (row[nameIndex] && String(row[nameIndex]).trim())
      ? String(row[nameIndex]).trim()
      : (row[businessIndex] && String(row[businessIndex]).trim())
        ? String(row[businessIndex]).trim()
        : firstNameFromEmail_(email);

    // Tone + subject
    const toneWord = (daysUntilDue === 0)
      ? "Final Reminder"
      : (daysUntilDue === 1) ? "Friendly Reminder" : "Reminder";

    let cutoffLine = "";
    if (daysUntilDue === 0) {
      const cutoff = new Date(dueOnly.getTime());
      cutoff.setHours(CUTOFF_HOUR_24, CUTOFF_MINUTE, 0, 0);
      const cutoffStr = Utilities.formatDate(cutoff, tz, "h:mm a");
      cutoffLine = `<p><b>Today is the final day for settlement.</b> Please remit payment by <b>${cutoffStr}</b> today.</p>`;
    }

    const subject = `${toneWord}: Minimum 30% Down Payment Required [Billing Invoice #${serialNo}] ‚Äî Due ${dueStr}`;

    // Button
    const buttonHtml = `<a href="${PAYMENT_LINK}" style="background-color:#007bff; color:#fff; padding:10px 16px; text-decoration:none; border-radius:6px; display:inline-block;">View Payment Options</a>`;

    // Email HTML
    const html = `
      <p>Hi ${toTitleCase_(displayName)},</p>

      <p>This is a ${toneWord.toLowerCase()} regarding <b>Billing Invoice #${serialNo}</b> for your
      <b>${campaign || "project"}</b> with <b>${COMPANY_NAME}</b>. Per our agreement, a minimum
      <b>30% down payment</b> is required to secure your booking and proceed with preparations.</p>

      <p><b>Contract Price:</b> ${toPhp_(amountNum)}<br>
      <b>Minimum 30% Down Payment:</b> ${toPhp_(amountNum * 0.30)}<br>
      <b>Due Date:</b> ${dueStr}</p>

      ${cutoffLine}

      <p>To keep all arrangements on schedule, please settle the required down payment ${
