/**
 * Creates a custom menu in the spreadsheet UI when the file is opened.
 * @OnlyCurrentDoc
 */
function onOpen() {
  SpreadsheetApp.getUi()
      .createMenu('Sales Tool')
      // --- Data Entry Items ---
      .addItem('Encode Invoice/Receipt', 'encodeInvoiceReceipt') 
      .addItem('Encode Acknowledgement Receipt', 'encodeAcknowledgementReceipt')
      .addSeparator()
      
      // --- Follow-up Items ---
      .addItem('Send FP Follow-Ups (Status = FOR FULL PAYMENT)', 'sendUpcomingFpFollowUps')
      .addItem('FORCE Send DP Daily Follow-Ups', 'sendDailyFollowUpsForce') // keep as-is unless you want to rename

      .addToUi();
}

/**
 * NEW: Status-only Full Payment follow-ups.
 * Sends FP emails ONLY when Column S ("Status") == "FOR FULL PAYMENT".
 * Still stamps Column U ("FP Last Follow-Up Sent") after sending.
 */
function processUpcomingFpFollowUps_() {
  const ss = SpreadsheetApp.getActiveSpreadsheet();
  const sheet = ss.getSheetByName(CONFIG.SHEET_NAMES.DATABASE);
  if (!sheet) throw new Error(`Sheet '${CONFIG.SHEET_NAMES.DATABASE}' not found.`);

  const lastRow = sheet.getLastRow();
  if (lastRow < 5) return { emailsSent: 0 };

  // Read A..U once
  const dataRange = sheet.getRange('A5:U' + lastRow);
  const values = dataRange.getValues();

  // For stamping U (FP Last Follow-Up Sent)
  const stampRange = sheet.getRange('U5:U' + lastRow);
  const updatedTimestamps = stampRange.getValues();

  // Local helpers
  const isSameDay_ = (d1, d2) =>
    d1 && d2 &&
    d1.getFullYear() === d2.getFullYear() &&
    d1.getMonth() === d2.getMonth() &&
    d1.getDate() === d2.getDate();

  const today = dateOnly_(new Date());
  let emailsSent = 0;

  // Column map (0-based from A)
  const H = {
    serial: 0,          // A
    campaign: 2,        // C
    name: 3,            // D
    business: 5,        // F
    email: 9,           // J
    givenAmount: 11,    // L
    fpDueDate: 13,      // N
    percentage: 14,     // O
    receivables: 17,    // R
    status: 18,         // S
    lastFpFollowUp: 20  // U
  };

  values.forEach((row, i) => {
  try {
    // ---- REQUIRE % COLUMN O >= 30% ----
    const pctRaw = row[H.percentage];
    let pct;
    if (typeof pctRaw === 'number') {
      pct = pctRaw > 1 ? pctRaw / 100 : pctRaw;
    } else {
      const n = parseFloat(String(pctRaw || '').replace(/[^0-9.-]+/g, ''));
      pct = isNaN(n) ? 0 : (n > 1 ? n / 100 : n);
    }
    if (pct < 0.30) return;

    // Idempotency: skip if already sent today
    const lastSent = row[H.lastFpFollowUp];
    if (lastSent instanceof Date && isSameDay_(lastSent, new Date())) return;

      const clientEmail = String(row[H.email] || '').split(/[;,]/)[0].trim();
      if (!clientEmail) return;

      const clientName = toTitleCase_(row[H.name] || row[H.business] || firstNameFromEmail_(row[H.email]));
      const serialNo = row[H.serial];
      const campaign = row[H.campaign] || 'engagement';

      const receivables = (typeof row[H.receivables] === 'number') ? row[H.receivables] : 0;
      const receivablesStr = toPhp_(receivables);

      const fpDue = row[H.fpDueDate];
      const dueOnly = (fpDue instanceof Date) ? dateOnly_(fpDue) : null;
      const dueDateStr = (dueOnly) ? fmtDate_(dueOnly) : '';

      // Pick FP email variant
      let email;
      if (dueOnly) {
        const diffDays = Math.round((dueOnly - today) / 86400000);
        if (diffDays === 0) {
          email = buildFpDueTodayEmail_({ clientName, serialNo, campaign, receivablesStr });
        } else if (diffDays === 1) {
          email = buildFpReminderEmail_({ clientName, serialNo, campaign, receivablesStr, dueDateStr });
        } else if (diffDays < 0) {
          const daysPastDue = Math.abs(diffDays);
          email = buildFpOverdueEmail_({ clientName, serialNo, campaign, receivablesStr, dueDateStr, daysPastDue });
        }
      }
      // Fallback if no due date set
      if (!email) {
        email = buildFpReminderEmail_({ clientName, serialNo, campaign, receivablesStr, dueDateStr });
      }

      // Send
      MailApp.sendEmail({
        to: clientEmail,
        subject: email.subject,
        htmlBody: email.html
      });

      // Stamp Column U (FP Last Follow-Up Sent)
      updatedTimestamps[i][0] = new Date();
      emailsSent++;
    } catch (e) {
      Logger.log(`processUpcomingFpFollowUps_ row ${i + 5} error: ${e.message}`);
    }
  });

  if (emailsSent > 0) {
    stampRange.setValues(updatedTimestamps);
  }

  return { emailsSent };
}


function sendUpcomingFpFollowUps() {
  const ui = (function(){ try { return SpreadsheetApp.getUi(); } catch(e) { return null; } })();
  try {
    const result = processUpcomingFpFollowUps_();
    const msg = `${result.emailsSent} Full Payment follow-up email(s) sent.\nStamped: Column U (FP Last Follow-Up Sent)`;
    if (ui) ui.alert('FP Follow-Ups (Status = FOR FULL PAYMENT)', msg, ui.ButtonSet.OK);
    Logger.log(msg);
  } catch (err) {
    Logger.log('sendUpcomingFpFollowUps error: ' + err.message);
    if (ui) ui.alert('Error', err.message, ui.ButtonSet.OK);
  }
}



