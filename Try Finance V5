function buildFpForfeitureEmail_({ clientName, serialNo, campaign, dueDateStr, receivablesStr, contractPriceStr, todayStr }) {
  const subject = `Final Notice: [Billing Invoice #${serialNo}] – Forfeiture of Contract & Payment`;
  const html = `
